@model List<CustomerApplication.Context.Customer_Infoo>
@{
    ViewBag.Title = "ViewCustomers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.Count > 0)
{
<h2>List of Customers</h2>

<table class="table table-dark">

    <th>First Name</th><th>Last Name</th><th>City</th><th>Email</th><th>Contact</th><th>Purpose</th>
    @foreach (var x in Model)
    {
<tr>
    <td scope="col">@x.First_Name</td>
    <td scope="col">@x.Second_Name</td>
    <td scope="col">@x.City</td>
    <td scope="col">@x.Email</td>
    <td scope="col">@x.Phone</td>
    <td scope="col">@trimString(x)</td>
    <td scope="col"><a style="color:green" href="/customer/editcustomer/@x.Customer_Id"><i class="glyphicon glyphicon-pencil"></i> </a>
                    <a href="/customer/deletecustomer/@x.Customer_Id" class="btn btn-sm btn-danger">Delete</a>
    </td>
</tr>
    }
</table>
}
else
            {
                <h2>No Customer Present </h2>
                <a href="/customer/addcustomers">Add Customers</a>
            }
@functions
{    
    public string trimString(CustomerApplication.Context.Customer_Infoo p)
    {
        string s = "";
        s += p.isBusiness == true ? "Business " : "";
        s += p.isDelivery == true ? "Delivery " : "";
        s += p.isVisiting == true ? "Visiting " : "";
        s += p.isOther    == true ? "Other " : "";
        s = s.Trim();
        s = s.Replace(" ", ",");
        return s;
    }

